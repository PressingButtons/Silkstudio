<section class="sprite">
    <table id="animation-tbl" style="width: 100%">
        <thead>
            <tr>
                <th colspan="3">Animations</th>
                <th><button id="btn-new-animation">New</button></th>
            </tr>
            <tr>
                <th>Name</th>
                <th colspan="2">Detail</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</section>

<section class="sprite flex col">
    <header>Sprite Image</header>

    <p>Sprite Image</p>
    <input type="file" id="sprite-image">

    <p>Sprite Cells</p>
    <div class="content full" id="sprite-cells" style="border: 1px solid black; overflow: auto">

    </div>

</section>

<section class="sprite">
    <header>Frame Animation Detail</header>
    <div class="content">
        <div class="spaced">
            <h4>Frame Duration(ms)</h4>
            <input type="text" pattern="[0-9]{1,4}" value="100">
        </div>

        <div class="spaced">
            <h4>Cell Number</h4>
            <input type="text" pattern="[0-9]{1,4}" value="1">
        </div>
    </div>
</section>


<section class="sprite">
    <table id="meta-tbl" style="width: 100%">
        <thead>
            <tr>
                <th colspan="4">Frame Meta Objects</th>
            </tr>
            <tr>
                <th>Type</th>
                <th>X</th>
                <th>Y</th>
                <th>Radius</th>
            </tr>
        </thead>
    </table>
</section>