<div id="tile_editor" class="edit_pane">

    <canvas width="800" height="480" class="main"></canvas>
    <canvas class="stamp" width="16" height="16"></canvas>

    <svg xmlns="http://www.w3.org/2000/svg">
        <defs>
            <pattern id="smallGrid" width="16" height="16" patternUnits="userSpaceOnUse">
                <path d="M 16 0 L 0 0 0 16" fill="none" stroke="rgba(0, 0, 0, 0.5)" stroke-width="0.5"/>
            </pattern>
            <pattern id="grid" width="160" height="160" patternUnits="userSpaceOnUse">
                <rect width="100%" height="100%" fill="url(#smallGrid)"/>
                <path d="M 160 0 L 0 0 0 160" fill="none" stroke="rgba(0, 0, 0, 0.5)" stroke-width="1"/>
            </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" stroke="black"/>
        <line x1="50%" y1="0" x2="50%" y2="100%" stroke="red" fill="none"/>
        <line x1="0%" y1="50%" x2="100%" y2="50%" stroke="blue" fill="none"/>
    </svg>

    <div class="listener"></div>

</div>